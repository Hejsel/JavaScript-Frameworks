doctype html
html(lang="da")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Skakbræt
    style.
      table {
        border-collapse: collapse;
      }
      td {
        width: 50px;
        height: 50px;
      }
      .skak-sort {
        background-color: #{backgroundColor};
      }
      .skak-hvid {
        background-color: white;
      }

  body
    h1 Skakbræt (#{size}x#{size})
    table(border="1")
      each i in rangeArray
        tr
          each j in rangeArray
            td(class=(i + j) % 2 === 0 ? 'skak-hvid' : 'skak-sort')
